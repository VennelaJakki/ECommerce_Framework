<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Ecommerce Basic Test" verbose="5" parallel="tests" thread-count="4">
<listeners>
<listener class-name="ecom.listeners.ExtentReportListener"/>
<listener class-name="ecom.listeners.AllureReportListener"/>
</listeners>


	<test name="Login Page Test">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="ecom.tests.LoginPageTest" />
		</classes>

	</test>
	
	<test name="Home Page Test">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="ecom.tests.HomePageTest" />
		</classes>

	</test>
	<test name="Cart Page Test">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="ecom.tests.CartPageTest" />
		</classes>

	</test>
	
	<test name="Product Info Page Test">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="ecom.tests.ProductInfoTest" />
		</classes>

	</test>
	
	<test name="Register Page Test">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="ecom.tests.RegisterPageTest" />
		</classes>

	</test>

	
	


</suite>